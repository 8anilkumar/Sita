<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Activity.PointsWon">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/pricewon"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:onClick="back"
            android:src="@drawable/ic_baseline_keyboard_backspace_24"
            app:tint="@color/white"/>

        <LinearLayout
            android:layout_width="@dimen/twohundreddp"
            android:layout_height="@dimen/twohundreddp"
            android:background="@drawable/giftbackground"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imagegift"
                android:layout_width="@dimen/onefiftydp"
                android:layout_height="@dimen/onefiftydp"
                android:src="@drawable/gift"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten"
                android:fontFamily="@font/metropolis_regular"
                android:text="@string/longtextpointwon"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/sixteensp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten"
            android:gravity="center">

            <TextView
                android:id="@+id/points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/metropolis_bold"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/twentydp" />

            <ImageView
                android:layout_width="@dimen/thirtydp"
                android:layout_height="@dimen/thirtydp"
                android:src="@drawable/ic_baseline_star_24"
                app:tint="@color/golden" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/otpverify"

            android:layout_width="@dimen/threehundred"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/twentydp"
            android:layout_marginBottom="@dimen/twentyfive"
            android:background="@drawable/border">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/metropolis_regular"
                android:text="@string/redeempoint"
                android:textColor="@color/white"
                android:textSize="@dimen/tweleve"
                android:textStyle="bold" />

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:visibility="gone"
        android:layout_marginTop="@dimen/thirtydp"
        android:layout_marginRight="10dp"
        android:fontFamily="@font/metropolis_regular"
        android:text="@string/referearnlongtext"

        android:textAlignment="center"
        android:textColor="@color/grey"
        android:textSize="@dimen/fourteensp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="@dimen/threehundred"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/twentydp"
        android:visibility="gone"
        android:layout_marginBottom="@dimen/twentyfive"
        android:background="@drawable/borderround"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/pointswon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="@dimen/ten"
            android:maxLength="30"
            android:fontFamily="@font/metropolis_regular"
            android:text="https://sita.srm/8768732/"
            android:textColor="@color/grey"
            android:textSize="@dimen/tweleve"
            android:textStyle="bold" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/fivedp"
            android:layout_marginLeft="@dimen/ten"
            android:background="@color/lightgrey" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/fifteensp"
            android:id="@+id/copy"
            android:fontFamily="@font/metropolis_regular"
            android:text="Copy"
            android:textAlignment="center"

            android:textColor="@color/blue"
            android:textSize="@dimen/sixteensp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/gotorewardpointLayout"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/twentyfive"
        android:background="@drawable/roundbutton">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/metropolis_regular"
            android:text="@string/gotoreward"
            android:textColor="@color/white"
            android:textSize="@dimen/fourteensp"
            android:textStyle="bold" />

    </RelativeLayout>

</LinearLayout>