<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_green"
    tools:context=".Activity.RedeemPoints">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/sixtydp"
            android:background="@color/colorPrimary"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/imgBack"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/fifteensp"
                    app:tint="@color/white"
                    android:src="@drawable/ic_baseline_keyboard_backspace_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rewardpoint"
                    android:textColor="@color/white"
                    android:fontFamily="@font/metropolis_regular"
                    android:textSize="@dimen/sixteensp"
                    android:layout_marginLeft="@dimen/twentydp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/helpLayout"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_help" />

            </LinearLayout>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardCornerRadius="6dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="@dimen/fivedp"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/ten"
                        android:background="@color/white"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="100dp">

                        <ImageView
                            android:layout_width="@dimen/sixtydp"
                            android:layout_height="@dimen/sixtydp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_earn_won" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/ten"
                        android:fontFamily="@font/metropolis_bold"
                        android:text="0"
                        android:id="@+id/totalearned"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sixteensp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/metropolis_regular"
                            android:text="@string/EarnedWon"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/fourteensp" />
                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="@dimen/hundreddp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/lightgrey" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/ten"
                        android:background="@color/white"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="100dp">

                        <ImageView
                            android:layout_width="@dimen/sixtydp"
                            android:layout_height="@dimen/sixtydp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_redeem" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/ten"
                        android:fontFamily="@font/metropolis_bold"
                        android:text="0"
                        android:id="@+id/totalredeemed"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sixteensp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:gravity="center">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/metropolis_regular"
                            android:text="@string/redeem"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/fourteensp" />
                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="@dimen/hundreddp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/lightgrey" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/ten"
                        android:background="@color/white"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="100dp">

                        <ImageView
                            android:layout_width="@dimen/sixtydp"
                            android:layout_height="@dimen/sixtydp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_balance" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/ten"
                        android:fontFamily="@font/metropolis_bold"
                        android:text="0"
                        android:id="@+id/balance"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sixteensp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/metropolis_regular"
                            android:text="@string/balance"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/fourteensp" />
                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/imgScanner"
            android:layout_width="@dimen/hundreddp"
            android:layout_height="@dimen/hundreddp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/fifteensp"
            android:src="@drawable/ic_qr_code" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten"
            android:fontFamily="@font/metropolis_bold"
            android:text="@string/scanfor"
            android:textAlignment="center"
            android:textColor="@color/darkgrey"
            android:textSize="@dimen/eighteen" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/metropolis_regular"
            android:text="@string/wonmorepoints"

            android:textAlignment="center"
            android:textColor="@color/darkgrey"
            android:textSize="@dimen/sixteensp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/fiftydep"
            android:layout_marginTop="@dimen/fivedp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:weightSum="2">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/earnedLayout"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/metropolis_regular"
                    android:text="@string/EarnedWon"
                    android:textAlignment="center"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/sixteensp" />



            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/metropolis_regular"
                    android:text="@string/redeem"
                    android:textAlignment="center"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/sixteensp" />

                >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/twentydp"
                    android:layout_marginRight="@dimen/twentydp"
                    android:background="@color/green" />


            </RelativeLayout>

        </LinearLayout>

        <com.cooltechworks.views.shimmer.ShimmerRecyclerView
            android:id="@+id/recycle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/fifteensp"
            android:background="@color/white"
            android:nestedScrollingEnabled="false"

            android:scrollbars="none"
            android:visibility="visible"
            tools:ignore="UnusedAttribute" />

    </LinearLayout>

</RelativeLayout>