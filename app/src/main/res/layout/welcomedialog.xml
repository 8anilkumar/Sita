<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_30sdp"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:id="@+id/mainCartLayout"
    app:cardBackgroundColor="@color/theme"
    app:cardCornerRadius="@dimen/_10sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_15sdp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="@dimen/twohundreddp"
            android:layout_height="@dimen/twohundreddp"
            android:layout_gravity="center"
            android:background="@drawable/giftbackground"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imagegift"
                android:layout_width="@dimen/onefiftydp"
                android:layout_height="@dimen/onefiftydp"
                android:src="@drawable/gift"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:gravity="center"
            android:text="Congratulations"
            android:textColor="@color/white"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold"
            android:visibility="visible"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:gravity="center"
            android:text="You have won Scratch Cart"
            android:textColor="@color/white"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold"
            android:visibility="visible"/>

        <in.myinnos.androidscratchcard.ScratchCard
            android:id="@+id/scratchCard"
            android:layout_width="258dp"
            android:layout_height="259dp"
            android:visibility="gone"
            app:scratchDrawable="@drawable/scracth_coupon"
            app:scratchWidth="@dimen/_25sdp" />

    </LinearLayout>


</androidx.cardview.widget.CardView>