<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_10sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_2sdp"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="@dimen/_110sdp"
            android:layout_height="@dimen/_130sdp"
            android:layout_margin="@dimen/_6sdp"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/fiftydep"
                android:layout_height="@dimen/fiftydep"
                android:layout_gravity="center"
                android:id="@+id/profileimage"
                android:layout_marginTop="@dimen/ten"
                android:src="@drawable/avatar"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/lightgrey"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/metropolis_medium"
                android:text="Rohit Sharma"
                android:layout_marginTop="@dimen/fivedp"
                android:id="@+id/name"
                android:textAlignment="center"
                android:textColor="@color/darkgrey"
                android:textSize="@dimen/tweleve" />

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginTop="@dimen/fivedp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="@dimen/fifteensp"
                    android:layout_height="@dimen/fifteensp"
                    android:id="@+id/productimage"
                    android:src="@drawable/iphone"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/metropolis_medium"
                    android:text="Iphone5"
                    android:id="@+id/productname"
                    android:textAlignment="center"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/tweleve" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginTop="@dimen/fivedp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/metropolis_medium"
                    android:text="40,000 Points"
                    android:textAlignment="center"
                    android:textColor="@color/golden"
                    android:layout_marginRight="@dimen/fivedp"
                    android:id="@+id/points"
                    android:textSize="@dimen/ten" />

                <ImageView
                    android:layout_width="@dimen/tweleve"
                    android:layout_height="@dimen/tweleve"
                    android:src="@drawable/ic_points" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>